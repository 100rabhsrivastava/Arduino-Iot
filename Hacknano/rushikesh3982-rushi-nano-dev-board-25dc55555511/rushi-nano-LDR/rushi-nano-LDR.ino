 int LDR=A7;         // label pin A7 as LDR

/*
 * ------------------------------------------------------------------------------------------------
 * Functions, ISRs
 * ------------------------------------------------------------------------------------------------
 */
 
/*
 * ------------------------------------------------------------------------------------------------
 * put your setup code here, to run once:
 * ------------------------------------------------------------------------------------------------
 */
 void setup() {
  pinMode(LDR,INPUT); // set pin A7 as input
  Serial.begin(9600); // set serial com at 9600bps  
 } 
 
/*
 * ------------------------------------------------------------------------------------------------
 * put your main code here, to run repeatedly:
 * ------------------------------------------------------------------------------------------------
 */
 void loop() {
  Serial.println(analogRead(LDR));  // reads an LDR and print its value
  delay(1);                         // delay for stability
 }
